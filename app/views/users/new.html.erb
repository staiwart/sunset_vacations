<% provide(:title, "Sign Up") %>

  
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>
    
      <%= f.label :name, "Full Name" %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'John Doe' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'name@example.com' %>
      
      <%= f.label :country %>
      <%= f.country_select :country, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', placeholder: '•'*6 %>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '•'*6 %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
